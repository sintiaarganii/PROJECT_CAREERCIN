﻿

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lupa Password - CareerCin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --light: #ffffff;
            --dark: #1f2937;
            --gray: #6b7280;
            --light-gray: #f3f4f6;
            --applicant-accent: #7c3aed; /* Warna ungu untuk pelamar */
        }

        *::-webkit-scrollbar {
            display: none;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            display: flex;
            min-height: 100vh;
            background-color: var(--light);
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-image: url('https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1500&q=80');
            background-size: cover;
            background-position: center;
            background-blend-mode: overlay;
            background-color: rgba(255, 255, 255, 0.9);
        }

        .password-reset-container {
            width: 100%;
            max-width: 480px;
            background: var(--light);
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            animation: fadeIn 0.5s ease-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .applicant-header {
            background: var(--applicant-accent);
            color: white;
            padding: 25px 30px;
            text-align: center;
            position: relative;
        }

            .applicant-header h1 {
                font-size: 1.8rem;
                font-weight: 700;
                margin-bottom: 8px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .applicant-header h1 i {
                    margin-right: 12px;
                    font-size: 1.6rem;
                }

            .applicant-header p {
                font-size: 1rem;
                opacity: 0.9;
            }

        .applicant-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: rgba(255, 255, 255, 0.2);
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .applicant-form-container {
            padding: 30px;
        }

        .applicant-notice {
            background: #f0f9ff;
            border-left: 4px solid #38bdf8;
            padding: 12px 15px;
            margin-bottom: 25px;
            border-radius: 4px;
            font-size: 0.9rem;
            display: flex;
            align-items: flex-start;
        }

            .applicant-notice i {
                color: #38bdf8;
                margin-right: 10px;
                font-size: 1.1rem;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--dark);
            font-size: 0.95rem;
        }

        .input-with-icon {
            position: relative;
        }

            .input-with-icon input {
                width: 100%;
                padding: 14px 14px 14px 45px;
                border: 1px solid #d1d5db;
                border-radius: 8px;
                font-size: 1rem;
                transition: all 0.3s;
            }

                .input-with-icon input:focus {
                    outline: none;
                    border-color: var(--applicant-accent);
                    box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.2);
                }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray);
        }

        .btn-reset {
            width: 100%;
            padding: 14px;
            background-color: var(--applicant-accent);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 10px;
        }

            .btn-reset:hover {
                background-color: #6d28d9;
            }

        .back-to-login {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
            color: var(--gray);
        }

            .back-to-login a {
                color: var(--applicant-accent);
                text-decoration: none;
                font-weight: 600;
                display: inline-flex;
                align-items: center;
            }

                .back-to-login a i {
                    margin-right: 8px;
                }

                .back-to-login a:hover {
                    text-decoration: underline;
                }

        .steps-container {
            margin-top: 25px;
            padding-top: 25px;
            border-top: 1px solid #e5e7eb;
        }

            .steps-container h3 {
                font-size: 1rem;
                color: var(--dark);
                margin-bottom: 15px;
                display: flex;
                align-items: center;
            }

                .steps-container h3 i {
                    margin-right: 10px;
                    color: var(--applicant-accent);
                }

        .steps-list {
            list-style: none;
            counter-reset: step-counter;
        }

            .steps-list li {
                display: flex;
                align-items: flex-start;
                margin-bottom: 20px;
                font-size: 0.9rem;
                color: var(--gray);
                position: relative;
                padding-left: 40px;
            }

                .steps-list li:before {
                    counter-increment: step-counter;
                    content: counter(step-counter);
                    position: absolute;
                    left: 0;
                    top: 0;
                    width: 28px;
                    height: 28px;
                    background-color: var(--applicant-accent);
                    color: white;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-weight: bold;
                    font-size: 0.8rem;
                }

        .secure-notice {
            text-align: center;
            margin-top: 20px;
            padding: 12px;
            background: #f9fafb;
            border-radius: 8px;
            font-size: 0.85rem;
            color: var(--gray);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .secure-notice i {
                color: #22c55e;
                margin-right: 8px;
            }

        /* Success message */
        .success-message {
            display: none;
            background: #ecfdf5;
            border-left: 4px solid #10b981;
            padding: 16px;
            margin-bottom: 25px;
            border-radius: 4px;
            font-size: 0.9rem;
            align-items: flex-start;
        }

            .success-message i {
                color: #10b981;
                margin-right: 10px;
                font-size: 1.1rem;
            }

        @@media (max-width: 576px) {
            body

        {
            padding: 15px;
            background-image: none;
        }

        .password-reset-container {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .applicant-header {
            padding: 20px;
        }

        .applicant-form-container {
            padding: 25px 20px;
        }

        .steps-list li {
            padding-left: 35px;
        }

            .steps-list li:before {
                width: 24px;
                height: 24px;
            }

        }
    </style>
</head>
<body>
    <div class="password-reset-container">
        <div class="applicant-header">
            <span class="applicant-badge">Pelamar</span>
            <h1><i class="fas fa-unlock-alt"></i> Reset Kata Sandi</h1>
            <p>Atur ulang kata sandi akun Anda</p>
        </div>

        <div class="applicant-form-container">
            <div class="applicant-notice">
                <i class="fas fa-info-circle"></i>
                <div>Masukkan email Anda. Kami akan mengirimkan link untuk mengatur ulang kata sandi.</div>
            </div>

            <div class="success-message" id="successMessage">
                <i class="fas fa-check-circle"></i>
                <div>Link reset kata sandi telah dikirim ke email Anda. Silakan periksa inbox Anda.</div>
            </div>

            <form asp-controller="LoginAndRegisterPage" id="send" asp-action="SendOtpForUser" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <div class="input-with-icon">
                        <span class="input-icon"><i class="fas fa-envelope"></i></span>
                        <input type="text" class="form-control" id="emailOrUsername" name="emailOrUsername"
                               placeholder="Masukkan email Anda" required />
                    </div>
                </div>

                <button type="submit" class="btn-reset">Kirim Kode OTP</button>
            </form>

            <div class="back-to-login">
                <a href="/LoginAndRegisterPage/LoginUser"><i class="fas fa-arrow-left"></i> Kembali ke halaman login</a>
            </div>

            <div class="secure-notice">
                <i class="fas fa-shield-alt"></i>
                <span>Link reset kata sandi hanya berlaku selama 10 menit</span>
            </div>
        </div>
    </div>
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById('send');

            form.addEventListener('submit', function (e) {
                e.preventDefault();

                // Tampilkan konfirmasi
                Swal.fire({
                    title: 'Kirim OTP??',
                    text: "Kode OTP akan dikirim ke email Anda",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#0a66c2',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Ya, Kirim',
                    cancelButtonText: 'Batal'
                }).then((result) => {
                   if (result.isConfirmed) {
                       // Tampilkan loading
                       Swal.fire({
                           title: 'Mengirim...',
                           text: 'Sedang mengirim kode OTP',
                           allowOutsideClick: false,
                           didOpen: () => {
                               Swal.showLoading()
                           }
                       });

                       // Submit form
                       this.submit();
                   }
               });
           });

            // Tampilkan popup success jika ada pesan dari controller
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                                                Swal.fire({
                                                    title: 'Berhasil!',
                                                    text: '@TempData["SuccessMessage"]',
                                                    icon: 'success',
                                                    confirmButtonColor: '#0a66c2'
                                                });
        </text>
    }

            // Tampilkan popup error jika ada pesan dari controller
    @if (TempData["ErrorMessage"] != null)
    {
        <text>
                                                Swal.fire({
                                                    title: 'Gagal!',
                                                    text: '@TempData["ErrorMessage"]',
                                                    icon: 'error',
                                                    confirmButtonColor: '#d33'
                                                });
        </text>
    }
        });
</script>