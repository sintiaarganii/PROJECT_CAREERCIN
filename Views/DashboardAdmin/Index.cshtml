@model PROJECT_CAREERCIN.Models.DTO.DashboardAdminDTO

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Dashboard Admin";
}

<style>
    /* Reset dan base styles */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    :root {
        --primary: #4361ee;
        --primary-light: #eef2ff;
        --secondary: #3f37c9;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --info: #3b82f6;
        --closed: #6b7280;
        --dark: #1f2937;
        --light: #f9fafb;
        --card-bg: #ffffff;
        --text-dark: #374151;
        --text-light: #6b7280;
        --border: #e5e7eb;
        --border-radius: 12px;
        --border-radius-sm: 8px;
        --box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --box-shadow-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --transition: all 0.3s ease;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8fafc;
        color: var(--text-dark);
        line-height: 1.6;
    }

    .dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
        width: 100%;
    }

    .dashboard-header {
        margin-bottom: 24px;
        text-align: center;
    }

        .dashboard-header h1 {
            font-size: 28px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

        .dashboard-header p {
            color: var(--text-light);
            font-size: 16px;
            max-width: 600px;
            margin: 0 auto;
        }

    /* Grid layout untuk card */
    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 16px;
        margin-bottom: 24px;
        width: 100%;
    }

    /* Stat card styles */
    .stat-card {
        background: var(--card-bg);
        padding: 20px;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        text-align: center;
        transition: var(--transition);
        width: 100%;
        position: relative;
        overflow: hidden;
        border: 1px solid var(--border);
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--box-shadow-hover);
        }

    .card-icon {
        font-size: 24px;
        margin-bottom: 12px;
        display: inline-block;
        padding: 12px;
        border-radius: 12px;
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-card.primary .card-icon {
        color: var(--primary);
        background-color: rgba(67, 97, 238, 0.1);
    }

    .stat-card.success .card-icon {
        color: var(--success);
        background-color: rgba(16, 185, 129, 0.1);
    }

    .stat-card.warning .card-icon {
        color: var(--warning);
        background-color: rgba(245, 158, 11, 0.1);
    }

    .stat-card.danger .card-icon {
        color: var(--danger);
        background-color: rgba(239, 68, 68, 0.1);
    }

    .stat-card.info .card-icon {
        color: var(--info);
        background-color: rgba(59, 130, 246, 0.1);
    }

    .stat-card.closed .card-icon {
        color: var(--closed);
        background-color: rgba(107, 114, 128, 0.1);
    }

    .stat-card h3 {
        color: var(--text-light);
        margin-bottom: 8px;
        font-size: 13px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-card .number {
        font-size: 28px;
        font-weight: 800;
        display: block;
        margin-bottom: 6px;
        color: var(--primary);
    }

    .stat-card .label {
        font-size: 13px;
        color: var(--text-light);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

    .trend-up {
        color: var(--success);
    }

    .trend-down {
        color: var(--danger);
    }

    /* Main content grid */
    .main-content-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
        margin-bottom: 24px;
    }

    /* Sidebar stats */
    .sidebar-stats {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    @@media (min-width: 992px) {
        .main-content-grid {
            grid-template-columns: 1fr 1.8fr;
        }
    }

    /* Container styles */
    .chart-container, .category-stats, .recent-activities {
        background: var(--card-bg);
        padding: 20px;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        width: 100%;
        overflow: hidden;
        border: 1px solid var(--border);
    }

    .chart-title {
        font-size: 18px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 16px;
        padding-bottom: 12px;
        border-bottom: 1px solid var(--border);
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .chart-title i {
            color: var(--primary);
            background: rgba(67, 97, 238, 0.1);
            padding: 8px;
            border-radius: 8px;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
        }

    /* Category item styles */
    .category-list {
        max-height: 280px;
        overflow-y: auto;
    }

    .category-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid var(--border);
        transition: var(--transition);
    }

        .category-item:hover {
            background-color: var(--primary-light);
            border-radius: var(--border-radius-sm);
            padding: 12px;
        }

        .category-item:last-child {
            border-bottom: none;
        }

    .category-name {
        font-weight: 500;
        color: var(--text-dark);
        flex: 1;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding-right: 12px;
        font-size: 14px;
    }

    .category-count {
        background: var(--primary);
        color: white;
        padding: 4px 10px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 700;
        min-width: 32px;
        text-align: center;
    }

    /* Activity item styles */
    .activity-list {
        max-height: 280px;
        overflow-y: auto;
    }

    .activity-item {
        display: flex;
        align-items: flex-start;
        padding: 14px 0;
        border-bottom: 1px solid var(--border);
        transition: var(--transition);
    }

        .activity-item:hover {
            background-color: var(--primary-light);
            border-radius: var(--border-radius-sm);
            padding: 14px 12px;
        }

        .activity-item:last-child {
            border-bottom: none;
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 14px;
        flex-shrink: 0;
        font-size: 16px;
        background-color: rgba(67, 97, 238, 0.1);
        color: var(--primary);
    }

    .activity-content {
        flex: 1;
        min-width: 0;
    }

    .activity-title {
        font-weight: 600;
        margin-bottom: 4px;
        color: var(--text-dark);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 14px;
    }

    .activity-time {
        font-size: 12px;
        color: var(--text-light);
        display: flex;
        align-items: center;
        gap: 6px;
    }

    /* Chart canvas - PERBAIKAN UTAMA */
    .chart-wrapper {
        position: relative;
        width: 100%;
        height: 300px;
    }

    /* Bottom chart container */
    .bottom-chart-container {
        background: var(--card-bg);
        padding: 20px;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        width: 100%;
        overflow: hidden;
        border: 1px solid var(--border);
        margin-bottom: 24px;
    }

    /* Media queries untuk responsivitas */
    @@media (max-width: 1200px) {
        .dashboard-container {
            padding: 16px;
        }
    }

    @@media (max-width: 992px) {
        .main-content-grid {
            grid-template-columns: 1fr;
        }

        .sidebar-stats {
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }

        .chart-wrapper {
            height: 280px;
        }
    }

    @@media (max-width: 768px) {
        .dashboard-header h1 {
            font-size: 24px;
        }

        .card-container {
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .sidebar-stats {
            grid-template-columns: 1fr;
        }

        .stat-card {
            padding: 16px;
        }

        .chart-container, .category-stats, .recent-activities, .bottom-chart-container {
            padding: 16px;
        }

        .chart-title {
            font-size: 16px;
        }

        .stat-card .number {
            font-size: 24px;
        }

        .chart-wrapper {
            height: 250px;
        }
    }

    @@media (max-width: 576px) {
        .dashboard-container {
            padding: 12px;
        }

        .dashboard-header h1 {
            font-size: 22px;
        }

        .dashboard-header p {
            font-size: 14px;
        }

        .stat-card .number {
            font-size: 22px;
        }

        .chart-title {
            font-size: 15px;
        }

        .category-item, .activity-item {
            padding: 10px 0;
        }

        .category-name, .activity-title {
            font-size: 13px;
        }

        .chart-wrapper {
            height: 220px;
        }
    }

    /* No data state */
    .no-data {
        text-align: center;
        padding: 30px 16px;
        color: var(--text-light);
    }

        .no-data i {
            font-size: 40px;
            margin-bottom: 12px;
            opacity: 0.3;
        }

        .no-data p {
            font-size: 14px;
        }

    /* Custom scrollbar */
    .category-list::-webkit-scrollbar,
    .activity-list::-webkit-scrollbar {
        width: 4px;
    }

    .category-list::-webkit-scrollbar-track,
    .activity-list::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 2px;
    }

    .category-list::-webkit-scrollbar-thumb,
    .activity-list::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 2px;
    }

        .category-list::-webkit-scrollbar-thumb:hover,
        .activity-list::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }
</style>

<!-- Dashboard Page -->
<div class="dashboard-container">
    <div class="dashboard-header">
        <h1><i class="fas fa-tachometer-alt"></i> Dashboard Admin</h1>
        <p>Selamat datang! Pantau dan kelola sistem BiblibJobStreet dengan mudah</p>
    </div>

    <!-- Statistik Cards -->
    <div class="card-container">
        <div class="stat-card primary">
            <div class="card-icon">
                <i class="fas fa-users"></i>
            </div>
            <h3>Total Pengguna</h3>
            <span class="number">@Model.TotalUsers</span>
            <div class="label">
                <i class="fas fa-user-plus trend-up"></i>
                <span>+@Model.UsersThisWeek minggu ini</span>
            </div>
        </div>

        <div class="stat-card success">
            <div class="card-icon">
                <i class="fas fa-building"></i>
            </div>
            <h3>Total Perusahaan</h3>
            <span class="number">@Model.TotalCompanies</span>
            <div class="label">
                <i class="fas fa-chart-line trend-up"></i>
                <span>+@Model.CompaniesThisWeek minggu ini</span>
            </div>
        </div>

        <div class="stat-card info">
            <div class="card-icon">
                <i class="fas fa-suitcase"></i>
            </div>
            <h3>Total Lowongan</h3>
            <span class="number">@Model.TotalJobVacancies</span>
            <div class="label">
                <i class="fas fa-briefcase"></i>
                <span>@Model.JobsThisWeek lowongan baru</span>
            </div>
        </div>

        <div class="stat-card warning">
            <div class="card-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>Lowongan Aktif</h3>
            <span class="number">@Model.TotalActiveJobVacancies</span>
            <div class="label">
                <i class="fas fa-bolt"></i>
                <span>Sedang berjalan</span>
            </div>
        </div>

        <div class="stat-card closed">
            <div class="card-icon">
                <i class="fas fa-times-circle"></i>
            </div>
            <h3>Lowongan Ditutup</h3>
            <span class="number">@Model.TotalClosedJobVacancies</span>
            <div class="label">
                <i class="fas fa-clock"></i>
                <span>Tidak aktif</span>
            </div>
        </div>

        <div class="stat-card danger">
            <div class="card-icon">
                <i class="fas fa-chart-pie"></i>
            </div>
            <h3>Rasio Lowongan/User</h3>
            <span class="number">@Model.JobToUserRatio</span>
            <div class="label">
                <i class="fas fa-balance-scale"></i>
                <span>Lowongan per user</span>
            </div>
        </div>
    </div>

    <!-- Konten Utama: Sidebar Stats -->
    <div class="main-content-grid">
        <!-- Sidebar: Kategori dan Aktivitas -->
        <div class="sidebar-stats">
            <div class="category-stats">
                <div class="chart-title">
                    <i class="fas fa-tags"></i>
                    Top Kategori Pekerjaan
                </div>
                <div class="category-list">
                    @if (Model.CategoryStats != null && Model.CategoryStats.Any())
                    {
                        foreach (var category in Model.CategoryStats)
                        {
                            <div class="category-item">
                                <span class="category-name" title="@category.CategoryName">@category.CategoryName</span>
                                <span class="category-count">@category.JobCount</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data">
                            <i class="fas fa-inbox"></i>
                            <p>Tidak ada data kategori</p>
                        </div>
                    }
                </div>
            </div>

            <div class="recent-activities">
                <div class="chart-title">
                    <i class="fas fa-history"></i>
                    Aktivitas Terbaru
                </div>
                <div class="activity-list">
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                    {
                        foreach (var activity in Model.RecentActivities)
                        {
                            <div class="activity-item">
                                <div class="activity-icon">
                                    <i class="@activity.Icon"></i>
                                </div>
                                <div class="activity-content">
                                    <div class="activity-title">@activity.Title</div>
                                    <div class="activity-time">
                                        <i class="far fa-clock"></i>
                                        @activity.Time
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data">
                            <i class="fas fa-inbox"></i>
                            <p>Tidak ada aktivitas</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Chart Container (Lebar penuh di mobile, di samping sidebar di desktop) -->
        <div class="chart-container">
            <div class="chart-title">
                <i class="fas fa-chart-bar"></i>
                Statistik 6 Bulan Terakhir
            </div>
            <div class="chart-wrapper">
                <canvas id="monthlyStatsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Chart Horizontal di Bawah (Untuk tampilan memanjang) -->
    <div class="bottom-chart-container">
        <div class="chart-title">
            <i class="fas fa-chart-line"></i>
            Tren Bulanan (Memanjang)
        </div>
        <div class="chart-wrapper">
            <canvas id="horizontalChart"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Data untuk chart bulanan
            const monthlyData = @Html.Raw(Json.Serialize(Model.MonthlyStats));

            if (monthlyData && monthlyData.length > 0) {
                const months = monthlyData.map(m => m.month);
                const users = monthlyData.map(m => m.users || 0);
                const companies = monthlyData.map(m => m.companies || 0);
                const jobVacancies = monthlyData.map(m => m.jobVacancies || 0);

                // Chart vertikal (utama)
                const ctx = document.getElementById('monthlyStatsChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: months,
                        datasets: [
                            {
                                label: 'Pengguna',
                                data: users,
                                backgroundColor: 'rgba(67, 97, 238, 0.8)',
                                borderColor: 'rgba(67, 97, 238, 1)',
                                borderWidth: 1,
                                borderRadius: 6,
                            },
                            {
                                label: 'Perusahaan',
                                data: companies,
                                backgroundColor: 'rgba(247, 37, 133, 0.8)',
                                borderColor: 'rgba(247, 37, 133, 1)',
                                borderWidth: 1,
                                borderRadius: 6,
                            },
                            {
                                label: 'Lowongan',
                                data: jobVacancies,
                                backgroundColor: 'rgba(76, 201, 240, 0.8)',
                                borderColor: 'rgba(76, 201, 240, 1)',
                                borderWidth: 1,
                                borderRadius: 6,
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                position: 'top',
                                labels: {
                                    usePointStyle: true,
                                    padding: 20
                                }
                            }
                        }
                    }
                });

                // Chart horizontal (di bawah)
                const horizontalCtx = document.getElementById('horizontalChart').getContext('2d');
                new Chart(horizontalCtx, {
                    type: 'line',
                    data: {
                        labels: months,
                        datasets: [
                            {
                                label: 'Pengguna',
                                data: users,
                                backgroundColor: 'rgba(67, 97, 238, 0.1)',
                                borderColor: 'rgba(67, 97, 238, 1)',
                                borderWidth: 3,
                                tension: 0.3,
                                fill: true
                            },
                            {
                                label: 'Perusahaan',
                                data: companies,
                                backgroundColor: 'rgba(247, 37, 133, 0.1)',
                                borderColor: 'rgba(247, 37, 133, 1)',
                                borderWidth: 3,
                                tension: 0.3,
                                fill: true
                            },
                            {
                                label: 'Lowongan',
                                data: jobVacancies,
                                backgroundColor: 'rgba(76, 201, 240, 0.1)',
                                borderColor: 'rgba(76, 201, 240, 1)',
                                borderWidth: 3,
                                tension: 0.3,
                                fill: true
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)'
                                }
                            },
                            x: {
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                position: 'top',
                                labels: {
                                    usePointStyle: true,
                                    padding: 20
                                }
                            }
                        }
                    }
                });
            } else {
                // Tampilkan pesan jika tidak ada data
                document.querySelector('.chart-wrapper').innerHTML =
                    '<div class="no-data"><i class="fas fa-chart-bar"></i><p>Tidak ada data statistik</p></div>';

                document.getElementById('horizontalChart').parentElement.innerHTML =
                    '<div class="no-data"><i class="fas fa-chart-line"></i><p>Tidak ada data tren</p></div>';
            }
        });
    </script>
}