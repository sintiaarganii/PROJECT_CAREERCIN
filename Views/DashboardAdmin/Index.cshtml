@model PROJECT_CAREERCIN.Models.DTO.DashboardAdminDTO

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Dashboard Admin";
}

<style>
    /* Reset dan base styles */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    :root {
        --primary: #4361ee;
        --primary-light: #4895ef;
        --secondary: #3f37c9;
        --success: #4cc9f0;
        --danger: #f72585;
        --warning: #f8961e;
        --info: #4895ef;
        --closed: #6c757d;
        --dark: #212529;
        --light: #f8f9fa;
        --card-bg: #ffffff;
        --text-dark: #343a40;
        --text-light: #6c757d;
        --border-radius: 12px;
        --box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8fafc;
        color: var(--text-dark);
        line-height: 1.6;
    }

    .dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 24px;
        width: 100%;
    }

    .dashboard-header {
        margin-bottom: 32px;
        text-align: center;
    }

        .dashboard-header h1 {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

        .dashboard-header p {
            color: var(--text-light);
            font-size: 18px;
            max-width: 600px;
            margin: 0 auto;
        }

    /* Grid layout untuk card */
    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
        width: 100%;
    }

    /* Stat card styles */
    .stat-card {
        background: var(--card-bg);
        padding: 24px;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        text-align: center;
        transition: var(--transition);
        width: 100%;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 6px;
            height: 100%;
        }

        .stat-card.primary::before {
            background: linear-gradient(to bottom, var(--primary), var(--primary-light));
        }

        .stat-card.success::before {
            background: linear-gradient(to bottom, var(--success), #3bc2e0);
        }

        .stat-card.warning::before {
            background: linear-gradient(to bottom, var(--warning), #f7a54a);
        }

        .stat-card.danger::before {
            background: linear-gradient(to bottom, var(--danger), #f94f8d);
        }

        .stat-card.info::before {
            background: linear-gradient(to bottom, var(--info), #5ba6f2);
        }

        .stat-card.closed::before {
            background: linear-gradient(to bottom, var(--closed), #8a96a5);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }

    .card-icon {
        font-size: 28px;
        margin-bottom: 16px;
        display: inline-block;
        padding: 16px;
        border-radius: 16px;
    }

    .stat-card.primary .card-icon {
        color: var(--primary);
        background-color: rgba(67, 97, 238, 0.1);
    }

    .stat-card.success .card-icon {
        color: var(--success);
        background-color: rgba(76, 201, 240, 0.1);
    }

    .stat-card.warning .card-icon {
        color: var(--warning);
        background-color: rgba(248, 150, 30, 0.1);
    }

    .stat-card.danger .card-icon {
        color: var(--danger);
        background-color: rgba(247, 37, 133, 0.1);
    }

    .stat-card.info .card-icon {
        color: var(--info);
        background-color: rgba(72, 149, 239, 0.1);
    }

    .stat-card.closed .card-icon {
        color: var(--closed);
        background-color: rgba(108, 117, 125, 0.1);
    }

    .stat-card h3 {
        color: var(--text-light);
        margin-bottom: 12px;
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-card .number {
        font-size: 32px;
        font-weight: 800;
        display: block;
        margin-bottom: 8px;
        background: linear-gradient(135deg, var(--primary), var(--primary-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-card .label {
        font-size: 14px;
        color: var(--text-light);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

    .trend-up {
        color: #28a745;
    }

    .trend-down {
        color: #dc3545;
    }

    /* Main content grid */
    .main-content-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 24px;
        margin-bottom: 32px;
    }

    /* Sidebar stats */
    .sidebar-stats {
        display: grid;
        grid-template-columns: 1fr;
        gap: 24px;
    }

    @@media (min-width: 992px) {
        .main-content-grid

    {
        grid-template-columns: 2fr 1fr;
    }

    }

    /* Container styles */
    .chart-container, .category-stats, .recent-activities {
        background: var(--card-bg);
        padding: 24px;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        width: 100%;
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .chart-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 2px solid #f0f4f8;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .chart-title i {
            color: var(--primary);
            background: rgba(67, 97, 238, 0.1);
            padding: 10px;
            border-radius: 10px;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    /* Category item styles */
    .category-list {
        max-height: 300px;
        overflow-y: auto;
    }

    .category-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 0;
        border-bottom: 1px solid #f0f4f8;
        transition: var(--transition);
    }

        .category-item:hover {
            background-color: #f8fafc;
            border-radius: 8px;
            padding: 14px 12px;
        }

        .category-item:last-child {
            border-bottom: none;
        }

    .category-name {
        font-weight: 500;
        color: var(--text-dark);
        flex: 1;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding-right: 12px;
    }

    .category-count {
        background: linear-gradient(135deg, var(--primary), var(--primary-light));
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 700;
        min-width: 36px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(67, 97, 238, 0.2);
    }

    /* Activity item styles */
    .activity-list {
        max-height: 300px;
        overflow-y: auto;
    }

    .activity-item {
        display: flex;
        align-items: flex-start;
        padding: 16px 0;
        border-bottom: 1px solid #f0f4f8;
        transition: var(--transition);
    }

        .activity-item:hover {
            background-color: #f8fafc;
            border-radius: 8px;
            padding: 16px 12px;
        }

        .activity-item:last-child {
            border-bottom: none;
        }

    .activity-icon {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 16px;
        flex-shrink: 0;
        font-size: 18px;
    }

    .activity-content {
        flex: 1;
        min-width: 0;
    }

    .activity-title {
        font-weight: 600;
        margin-bottom: 6px;
        color: var(--text-dark);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .activity-time {
        font-size: 13px;
        color: var(--text-light);
        display: flex;
        align-items: center;
        gap: 6px;
    }

    /* Chart canvas */
    .chart-wrapper {
        position: relative;
        height: 300px;
        width: 100%;
    }

    /* Bottom chart container */
    .bottom-chart-container {
        background: var(--card-bg);
        padding: 24px;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        width: 100%;
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.05);
        margin-bottom: 32px;
    }

    /* Media queries untuk responsivitas */
    @@media (max-width: 1200px) {
        .dashboard-container

    {
        padding: 20px;
    }

    }

    @@media (max-width: 992px) {
        .main-content-grid

    {
        grid-template-columns: 1fr;
    }

    .sidebar-stats {
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    }

    @@media (max-width: 768px) {
        .dashboard-header h1

    {
        font-size: 28px;
    }

    .card-container {
        grid-template-columns: 1fr;
    }

    .sidebar-stats {
        grid-template-columns: 1fr;
    }

    .stat-card {
        padding: 20px;
    }

    .chart-container, .category-stats, .recent-activities, .bottom-chart-container {
        padding: 20px;
    }

    }

    @@media (max-width: 576px) {
        .dashboard-container

    {
        padding: 16px;
    }

    .dashboard-header h1 {
        font-size: 24px;
    }

    .stat-card .number {
        font-size: 28px;
    }

    .chart-title {
        font-size: 18px;
    }

    }

    /* No data state */
    .no-data {
        text-align: center;
        padding: 40px 20px;
        color: var(--text-light);
    }

        .no-data i {
            font-size: 48px;
            margin-bottom: 16px;
            opacity: 0.3;
        }

        .no-data p {
            font-size: 16px;
        }

    /* Custom scrollbar */
    .category-list::-webkit-scrollbar,
    .activity-list::-webkit-scrollbar {
        width: 6px;
    }

    .category-list::-webkit-scrollbar-track,
    .activity-list::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }

    .category-list::-webkit-scrollbar-thumb,
    .activity-list::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }

        .category-list::-webkit-scrollbar-thumb:hover,
        .activity-list::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }
</style>

<!-- Dashboard Page -->
<div class="dashboard-container">
    <div class="dashboard-header">
        <h1><i class="fas fa-tachometer-alt"></i> Dashboard Admin</h1>
        <p>Selamat datang! Pantau dan kelola sistem BiblibJobStreet dengan mudah</p>
    </div>

    <!-- Statistik Cards -->
    <div class="card-container">
        <div class="stat-card primary">
            <div class="card-icon">
                <i class="fas fa-users"></i>
            </div>
            <h3>Total Pengguna</h3>
            <span class="number">@Model.TotalUsers</span>
            <div class="label">
                <i class="fas fa-user-plus trend-up"></i>
                <span>+@Model.UsersThisWeek minggu ini</span>
            </div>
        </div>

        <div class="stat-card success">
            <div class="card-icon">
                <i class="fas fa-building"></i>
            </div>
            <h3>Total Perusahaan</h3>
            <span class="number">@Model.TotalCompanies</span>
            <div class="label">
                <i class="fas fa-chart-line trend-up"></i>
                <span>+@Model.CompaniesThisWeek minggu ini</span>
            </div>
        </div>

        <div class="stat-card info">
            <div class="card-icon">
                <i class="fas fa-suitcase"></i>
            </div>
            <h3>Total Lowongan</h3>
            <span class="number">@Model.TotalJobVacancies</span>
            <div class="label">
                <i class="fas fa-briefcase"></i>
                <span>@Model.JobsThisWeek lowongan baru</span>
            </div>
        </div>

        <div class="stat-card warning">
            <div class="card-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>Lowongan Aktif</h3>
            <span class="number">@Model.TotalActiveJobVacancies</span>
            <div class="label">
                <i class="fas fa-bolt"></i>
                <span>Sedang berjalan</span>
            </div>
        </div>

        <div class="stat-card closed">
            <div class="card-icon">
                <i class="fas fa-times-circle"></i>
            </div>
            <h3>Lowongan Ditutup</h3>
            <span class="number">@Model.TotalClosedJobVacancies</span>
            <div class="label">
                <i class="fas fa-clock"></i>
                <span>Tidak aktif</span>
            </div>
        </div>

        <div class="stat-card danger">
            <div class="card-icon">
                <i class="fas fa-chart-pie"></i>
            </div>
            <h3>Rasio Lowongan/User</h3>
            <span class="number">@Model.JobToUserRatio</span>
            <div class="label">
                <i class="fas fa-balance-scale"></i>
                <span>Lowongan per user</span>
            </div>
        </div>
    </div>

    <!-- Konten Utama: Sidebar Stats -->
    <div class="main-content-grid">
        <!-- Sidebar: Kategori dan Aktivitas -->
        <div class="sidebar-stats">
            <div class="category-stats">
                <div class="chart-title">
                    <i class="fas fa-tags"></i>
                    Top Kategori Pekerjaan
                </div>
                <div class="category-list">
                    @if (Model.CategoryStats != null && Model.CategoryStats.Any())
                    {
                        foreach (var category in Model.CategoryStats)
                        {
                            <div class="category-item">
                                <span class="category-name" title="@category.CategoryName">@category.CategoryName</span>
                                <span class="category-count">@category.JobCount</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data">
                            <i class="fas fa-inbox"></i>
                            <p>Tidak ada data kategori</p>
                        </div>
                    }
                </div>
            </div>

            <div class="recent-activities">
                <div class="chart-title">
                    <i class="fas fa-history"></i>
                    Aktivitas Terbaru
                </div>
                <div class="activity-list">
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                    {
                        foreach (var activity in Model.RecentActivities)
                        {
                            <div class="activity-item">
                                <div class="activity-icon" style="background-color: rgba(67, 97, 238, 0.1); color: #4361ee;">
                                    <i class="@activity.Icon"></i>
                                </div>
                                <div class="activity-content">
                                    <div class="activity-title">@activity.Title</div>
                                    <div class="activity-time">
                                        <i class="far fa-clock"></i>
                                        @activity.Time
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data">
                            <i class="fas fa-inbox"></i>
                            <p>Tidak ada aktivitas</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Chart Container (Lebar penuh di mobile, di samping sidebar di desktop) -->
        <div class="chart-container">
            <div class="chart-title">
                <i class="fas fa-chart-bar"></i>
                Statistik 6 Bulan Terakhir
            </div>
            <div class="chart-wrapper">
                <canvas id="monthlyStatsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Chart Horizontal di Bawah (Untuk tampilan memanjang) -->
    <div class="bottom-chart-container">
        <div class="chart-title">
            <i class="fas fa-chart-line"></i>
            Tren Bulanan (Memanjang)
        </div>
        <div class="chart-wrapper">
            <canvas id="horizontalChart"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Data untuk chart bulanan
            const monthlyData = @Html.Raw(Json.Serialize(Model.MonthlyStats));

            if (monthlyData && monthlyData.length > 0) {
                const months = monthlyData.map(m => m.month);
                const users = monthlyData.map(m => m.users || 0);
                const companies = monthlyData.map(m => m.companies || 0);
                const jobVacancies = monthlyData.map(m => m.jobVacancies || 0);

                // Chart vertikal (utama)
                const ctx = document.getElementById('monthlyStatsChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: months,
                        datasets: [
                            {
                                label: 'Pengguna',
                                data: users,
                                backgroundColor: 'rgba(67, 97, 238, 0.8)',
                                borderColor: 'rgba(67, 97, 238, 1)',
                                borderWidth: 1,
                                borderRadius: 6,
                            },
                            {
                                label: 'Perusahaan',
                                data: companies,
                                backgroundColor: 'rgba(247, 37, 133, 0.8)',
                                borderColor: 'rgba(247, 37, 133, 1)',
                                borderWidth: 1,
                                borderRadius: 6,
                            },
                            {
                                label: 'Lowongan',
                                data: jobVacancies,
                                backgroundColor: 'rgba(76, 201, 240, 0.8)',
                                borderColor: 'rgba(76, 201, 240, 1)',
                                borderWidth: 1,
                                borderRadius: 6,
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                position: 'top',
                                labels: {
                                    usePointStyle: true,
                                    padding: 20
                                }
                            }
                        }
                    }
                });

                // Chart horizontal (di bawah)
                const horizontalCtx = document.getElementById('horizontalChart').getContext('2d');
                new Chart(horizontalCtx, {
                    type: 'line',
                    data: {
                        labels: months,
                        datasets: [
                            {
                                label: 'Pengguna',
                                data: users,
                                backgroundColor: 'rgba(67, 97, 238, 0.1)',
                                borderColor: 'rgba(67, 97, 238, 1)',
                                borderWidth: 3,
                                tension: 0.3,
                                fill: true
                            },
                            {
                                label: 'Perusahaan',
                                data: companies,
                                backgroundColor: 'rgba(247, 37, 133, 0.1)',
                                borderColor: 'rgba(247, 37, 133, 1)',
                                borderWidth: 3,
                                tension: 0.3,
                                fill: true
                            },
                            {
                                label: 'Lowongan',
                                data: jobVacancies,
                                backgroundColor: 'rgba(76, 201, 240, 0.1)',
                                borderColor: 'rgba(76, 201, 240, 1)',
                                borderWidth: 3,
                                tension: 0.3,
                                fill: true
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)'
                                }
                            },
                            x: {
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                position: 'top',
                                labels: {
                                    usePointStyle: true,
                                    padding: 20
                                }
                            }
                        }
                    }
                });
            } else {
                // Tampilkan pesan jika tidak ada data
                document.querySelector('.chart-wrapper').innerHTML =
                    '<div class="no-data"><i class="fas fa-chart-bar"></i><p>Tidak ada data statistik</p></div>';

                document.getElementById('horizontalChart').parentElement.innerHTML =
                    '<div class="no-data"><i class="fas fa-chart-line"></i><p>Tidak ada data tren</p></div>';
            }
        });
    </script>
}