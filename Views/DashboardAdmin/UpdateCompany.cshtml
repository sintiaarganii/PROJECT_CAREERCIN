@model PROJECT_CAREERCIN.Models.DTO.RegisterPerusahaanDTO

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Update Perusahaan";
}

<!-- Perusahaan Form Page -->
<div class="page active" id="perusahaan-form">
    <div class="form-container">
        <h3><i class="fas fa-building"></i> Edit Perusahaan</h3>

        <form method="post" id="update-form" asp-action="UpdateCompany" enctype="multipart/form-data">
            <input type="hidden" asp-for="PerusahaanId" />
            <div class="form-group">
                <label asp-for="NamaPerusahaan"></label>
                <input asp-for="NamaPerusahaan" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="BidangUsaha"></label>
                <input asp-for="BidangUsaha" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Alamat"></label>
                <input asp-for="Alamat" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" class="form-control" required>
                    <option value="Active">Active</option>
                    <option value="Unactive">Unactive</option>
                    <option value="Delete">Delete</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <a href="@Url.Action("CompanyList", "DashboardAdmin")" class="action-btn secondary">
                    <i class="fas fa-times"></i> Batal
                </a>
                <button type="submit" class="action-btn">
                    <i class="fas fa-save"></i> Simpan
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById('update-form');

        form.addEventListener('submit', function (e) {
            e.preventDefault();

            // Tampilkan konfirmasi
            Swal.fire({
                title: 'Update Company?',
                text: "Apakah Anda yakin ingin update status perusahaan ini?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#0a66c2',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Ya, Update',
                cancelButtonText: 'Batal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit form
                    form.submit();
                }
            });
        });

        // Tampilkan popup success jika ada pesan dari controller
        @if (TempData["SuccessMessage"] != null)
        {
                                        <text>
                                        Swal.fire({
                                            title: 'Berhasil!',
                                            text: '@TempData["SuccessMessage"]',
                                            icon: 'success',
                                            confirmButtonColor: '#0a66c2'
                                        });
                                        </text>
        }

        // Tampilkan popup error jika ada pesan dari controller
        @if (TempData["ErrorMessage"] != null)
        {
                                        <text>
                                        Swal.fire({
                                            title: 'Gagal!',
                                            text: '@TempData["ErrorMessage"]',
                                            icon: 'error',
                                            confirmButtonColor: '#d33'
                                        });
                                        </text>
        }
    });
</script>