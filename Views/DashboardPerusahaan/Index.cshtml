@model PROJECT_CAREERCIN.Models.DTO.CompanyDashboardDTO
@{
    Layout = "_LayoutPerusahaan"; // Pakai template
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Perusahaan</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    /* Variabel CSS untuk konsistensi tema */
    :root {
        --primary: #2563eb;
        --primary-dark: #1d4ed8;
        --secondary: #64748b;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --light: #f8fafc;
        --dark: #1e293b;
        --card-1: #4f46e5;
        --card-2: #0ea5e9;
        --card-3: #ec4899;
        --card-4: #f59e0b;
        --card-5: #10b981;
        --card-6: #ef4444;
        --card-7: #8b5cf6;
        --card-8: #64748b;
        --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-hover: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        --radius: 12px;
        --transition: all 0.3s ease;
    }

    /* Reset dan gaya dasar */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background-color: #f1f5f9;
        color: #334155;
        line-height: 1.6;
    }

    .page#dashboard {
        max-width: 1280px;
        margin: 30px auto;
        padding: 20px;
        animation: fadeIn 0.8s ease-out;
    }

    /* Gaya untuk judul halaman */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e2e8f0;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--dark);
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .page-title i {
            color: var(--primary);
            background: #eff6ff;
            padding: 12px;
            border-radius: 50%;
        }

    /* Gaya untuk tombol aksi */
    .action-btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        background: var(--primary);
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: var(--transition);
        font-weight: 600;
        box-shadow: var(--shadow);
    }

        .action-btn:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }

    /* Gaya untuk container kartu */
    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .card {
        background: white;
        padding: 24px;
        border-radius: var(--radius);
        text-align: center;
        box-shadow: var(--shadow);
        transition: var(--transition);
        position: relative;
        overflow: hidden;
        animation: slideUp 0.5s ease-out;
        animation-fill-mode: backwards;
    }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
        }

        .card:nth-child(1)::before {
            background: var(--card-1);
        }

        .card:nth-child(2)::before {
            background: var(--card-2);
        }

        .card:nth-child(3)::before {
            background: var(--card-3);
        }

        .card:nth-child(4)::before {
            background: var(--card-4);
        }

        .card:nth-child(5)::before {
            background: var(--card-5);
        }

        .card:nth-child(6)::before {
            background: var(--card-6);
        }

        .card:nth-child(7)::before {
            background: var(--card-7);
        }

        .card:nth-child(8)::before {
            background: var(--card-8);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

        .card i {
            font-size: 32px;
            margin-bottom: 16px;
            display: inline-block;
            padding: 16px;
            border-radius: 50%;
            background: #eff6ff;
            color: var(--primary);
            animation: pulse 2s infinite;
        }

        .card:nth-child(1) i {
            color: var(--card-1);
            background: rgba(79, 70, 229, 0.1);
        }

        .card:nth-child(2) i {
            color: var(--card-2);
            background: rgba(14, 165, 233, 0.1);
        }

        .card:nth-child(3) i {
            color: var(--card-3);
            background: rgba(236, 72, 153, 0.1);
        }

        .card:nth-child(4) i {
            color: var(--card-4);
            background: rgba(245, 158, 11, 0.1);
        }

        .card:nth-child(5) i {
            color: var(--card-5);
            background: rgba(16, 185, 129, 0.1);
        }

        .card:nth-child(6) i {
            color: var(--card-6);
            background: rgba(239, 68, 68, 0.1);
        }

        .card:nth-child(7) i {
            color: var(--card-7);
            background: rgba(139, 92, 246, 0.1);
        }

        .card:nth-child(8) i {
            color: var(--card-8);
            background: rgba(100, 116, 139, 0.1);
        }

        .card h3 {
            font-size: 16px;
            margin-bottom: 12px;
            color: var(--secondary);
            font-weight: 500;
        }

        .card p {
            font-size: 28px;
            font-weight: 700;
            color: var(--dark);
        }

    /* Gaya untuk container tabel */
    .table-container {
        background: white;
        padding: 24px;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        margin-bottom: 30px;
        animation: fadeIn 0.8s ease-out;
    }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .table-container h3 {
        color: var(--dark);
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 20px;
    }

        .table-container h3 i {
            color: var(--primary);
        }

    .view-all {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: var(--transition);
    }

        .view-all:hover {
            color: var(--primary-dark);
            gap: 8px;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
    }

        table thead {
            background: #f1f5f9;
        }

        table th {
            padding: 16px;
            text-align: left;
            font-weight: 600;
            color: var(--secondary);
            text-transform: uppercase;
            font-size: 14px;
            letter-spacing: 0.5px;
        }

        table td {
            padding: 16px;
            border-bottom: 1px solid #e2e8f0;
        }

        table tbody tr {
            transition: var(--transition);
        }

            table tbody tr:last-child td {
                border-bottom: none;
            }

            table tbody tr:hover {
                background: #f8fafc;
            }

    .status {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

        .status.active {
            background: rgba(16, 185, 129, 0.1);
            color: #047857;
        }

        .status.pending {
            background: rgba(245, 158, 11, 0.1);
            color: #b45309;
        }

        .status.closed {
            background: rgba(100, 116, 139, 0.1);
            color: #475569;
        }

    /* Gaya untuk chart container */
    .chart-container {
        background: white;
        padding: 24px;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        margin-bottom: 30px;
        animation: fadeIn 0.8s ease-out;
    }

    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .chart-container h3 {
        color: var(--dark);
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 20px;
    }

        .chart-container h3 i {
            color: var(--primary);
        }

    .chart-legend {
        display: flex;
        gap: 15px;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
    }

    .legend-color {
        width: 16px;
        height: 16px;
        border-radius: 4px;
        background: linear-gradient(to top, var(--primary), var(--primary-dark));
    }

    .chart-wrapper {
        display: flex;
        height: 300px;
        gap: 15px;
        margin-top: 20px;
    }

    .y-axis {
        display: flex;
        flex-direction: column-reverse;
        justify-content: space-between;
        padding-right: 15px;
        font-size: 12px;
        color: var(--secondary);
        border-right: 1px solid #e2e8f0;
    }

    .chart-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .bars-container {
        flex: 1;
        display: flex;
        justify-content: space-around;
        align-items: flex-end;
        gap: 20px;
        padding: 0 10px;
        border-bottom: 1px solid #e2e8f0;
    }

    .bar-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
        justify-content: flex-end;
        position: relative;
    }

    .bar {
        width: 50px;
        background: linear-gradient(to top, var(--primary), var(--primary-dark));
        border-radius: 6px 6px 0 0;
        transition: var(--transition);
        position: relative;
        cursor: pointer;
    }

        .bar:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(37, 99, 235, 0.4);
            background: linear-gradient(to top, var(--primary-dark), #1e40af);
        }

    .bar-value {
        position: absolute;
        top: -28px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 12px;
        font-weight: 700;
        color: white;
        background: var(--primary);
        padding: 4px 10px;
        border-radius: 20px;
        opacity: 0;
        transition: var(--transition);
    }

    .bar:hover .bar-value {
        opacity: 1;
        top: -35px;
    }

    .bar-label {
        margin-top: 12px;
        font-size: 12px;
        text-align: center;
        color: var(--secondary);
        font-weight: 500;
    }

    .grid-lines {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: none;
    }

    .grid-line {
        position: absolute;
        left: 0;
        right: 0;
        border-top: 1px dashed #e2e8f0;
    }

    /* Animasi */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(37, 99, 235, 0.4);
        }

        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(37, 99, 235, 0);
        }

        100% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(37, 99, 235, 0);
        }
    }

    /* Responsivitas */
    @@media (max-width: 1024px) {
        .card-container {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        }
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .card-container {
            grid-template-columns: repeat(2, 1fr);
        }

        .chart-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .chart-wrapper {
            height: 250px;
        }

        .bar {
            width: 30px;
        }
    }

    @@media (max-width: 480px) {
        .card-container {
            grid-template-columns: 1fr;
        }

        table {
            display: block;
            overflow-x: auto;
        }

        .chart-wrapper {
            flex-direction: column;
            height: auto;
        }

        .y-axis {
            flex-direction: row;
            justify-content: space-between;
            border-right: none;
            border-bottom: 1px solid #e2e8f0;
            padding-right: 0;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }

        .bars-container {
            gap: 10px;
        }
    }
</style>
/head>
<body>
    <div class="page active" id="dashboard">
        <!-- Header -->
        <div class="page-header">
            <h1 class="page-title"><i class="fas fa-chart-line"></i> Dashboard Perusahaan</h1>
        </div>
    <!-- Bagian card-container dan table-container tetap sama -->
    <div class="card-container">
        <div class="card">
            <i class="fas fa-suitcase"></i>
            <h3>Total Lowongan</h3>
            <p>@Model.TotalLowongan</p>
        </div>
        <div class="card">
            <i class="fas fa-users"></i>
            <h3>Pelamar Aktif</h3>
            <p>@Model.PelamarAktif</p>
        </div>
        <div class="card">
            <i class="fas fa-file-alt"></i>
            <h3>Lamaran Baru</h3>
            <p>@Model.LamaranBaru</p>
        </div>
        <div class="card">
            <i class="fas fa-chart-line"></i>
            <h3>Statistik Bulanan</h3>
            <p>@Model.StatistikBulanan</p>
        </div>
        <div class="card">
            <i class="fas fa-briefcase"></i>
            <h3>Lowongan Terbaru</h3>
            <p>@Model.LowonganTerbaru</p>
        </div>
        <div class="card">
            <i class="fas fa-calendar-day"></i>
            <h3>Lamaran Baru Hari Ini</h3>
            <p>@Model.LamaranHariIni</p>
        </div>
        <div class="card">
            <i class="fas fa-calendar-week"></i>
            <h3>Lamaran Minggu Ini</h3>
            <p>@Model.LamaranMinggIni</p>
        </div>
        <div class="card">
            <i class="fas fa-check-circle"></i>
            <h3>Lamaran Diterima</h3>
            <p>@Model.LamaranDiterima</p>
        </div>
    </div>

        <!-- Tabel Lowongan Terbaru -->
        <div class="table-container">
            <div class="table-header">
                <h3><i class="fas fa-list"></i> Lowongan Terbaru</h3>
                @* <a href="#" class="view-all">Lihat Semua <i class="fas fa-arrow-right"></i></a> *@
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Posisi</th>
                        <th>Perusahaan</th>
                        <th>Tanggal</th>
                        <th>Status</th>
                    </tr>
                </thead>
            <tbody>
                @foreach (var lowongan in Model.DaftarLowonganTerbaru)
                {
                    <tr>
                        <td data-label="Posisi">@lowongan.Posisi</td>
                        <td data-label="Perusahaan">@lowongan.NamaPerusahaan</td>
                        <td data-label="Tanggal">@lowongan.TanggalDibuat.ToString("yyyy-MM-dd")</td>
                        <td data-label="Status">
                            <span class="status">
                                @lowongan.status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bagian chart yang diperbaiki -->
        <div class="chart-container">
            <div class="chart-header">
                <h3><i class="fas fa-chart-bar"></i> Grafik Aktivitas Lamaran Bulanan</h3>
                <div class="chart-legend">
                    <div class="legend-item">
                        <div class="legend-color"></div>
                        <span>Jumlah Lamaran</span>
                    </div>
                </div>
            </div>

        <div class="chart-wrapper">
            <div class="y-axis">
                @{
                    // Menghitung nilai maksimum untuk skala Y
                    int maxValue = Model.GrafikLamaran.Any() ? Model.GrafikLamaran.Max(g => g.Jumlah) : 0;
                    int step = maxValue > 0 ? (int)Math.Ceiling(maxValue / 5.0) : 1;
                    if (step == 0) step = 1;

                    for (int i = 5; i >= 0; i--)
                    {
                        <span>@(i* step)</span>
                    }
                }
            </div>

            <div class="chart-content">
                <!-- Grid lines -->
                <div class="grid-lines">
                    @for (int i = 0; i <= 5; i++)
                    {
                        <div class="grid-line" style="top: @(i * 20)%;"></div>
                    }
                </div>

                <div class="bars-container">
                    @foreach (var item in Model.GrafikLamaran)
                    {
                        int maxVal = Model.GrafikLamaran.Any() ? Model.GrafikLamaran.Max(g => g.Jumlah) : 1;
                        if (maxVal == 0) { maxVal = 1; }

                        // Menghitung tinggi bar sebagai persentase dari nilai maksimum
                        int percentage = (int)Math.Round((double)item.Jumlah / maxVal * 100);

                        <div class="bar-wrapper">
                            <div class="bar" style="height: @percentage%;">
                                <span class="bar-value">@item.Jumlah</span>
                                <div class="bar-tooltip">@item.Tanggal: @item.Jumlah lamaran</div>
                            </div>
                            <div class="bar-label">@item.Tanggal</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
    <script>
        // Animasi untuk grafik ketika halaman dimuat
        document.addEventListener('DOMContentLoaded', function () {
            // Animasi untuk setiap bar pada grafik
            const bars = document.querySelectorAll('.bar');
            bars.forEach((bar, index) => {
                // Set timeout untuk animasi berurutan
                setTimeout(() => {
                    bar.style.animation = 'growHeight 1s ease-out';
                }, index * 200);
            });
        });
    </script>
</body>
</html>