@model PROJECT_CAREERCIN.Models.DTO.UserProfileViewDTO
@{
    Layout = "_LayoutUser";
}

<style>
    /* LinkedIn-inspired Styles */
    :root {
        --linkedin-blue: #0a66c2;
        --linkedin-light-blue: #70b5f9;
        --linkedin-dark-blue: #004182;
        --linkedin-background: #f3f2ef;
        --linkedin-card: #ffffff;
        --linkedin-text: #333333;
        --linkedin-text-light: #666666;
        --linkedin-border: #e0e0e0;
    }

    body {
        background-color: var(--linkedin-background);
        color: var(--linkedin-text);
        font-family: -apple-system, system-ui, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
        line-height: 1.4;
        margin: 0;
        padding: 0;
    }

    .profile-container {
        max-width: 1128px;
        margin: 20px auto;
        padding: 0 16px;
    }

    /* Profile Card Styles */
    .profile-card {
        background-color: var(--linkedin-card);
        border-radius: 10px;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.08), 0 2px 4px rgba(0,0,0,0.13);
        overflow: hidden;
        margin-bottom: 16px;
        position: relative;
    }

    .profile-cover {
        height: 200px;
        background-color: var(--linkedin-light-blue);
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .profile-info-section {
        padding: 0 24px 24px;
        position: relative;
        margin-top: -72px;
    }

    .profile-avatar-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 16px;
    }

    .profile-avatar {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        border: 4px solid var(--linkedin-card);
        object-fit: cover;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.08), 0 2px 4px rgba(0,0,0,0.13);
        background-color: var(--linkedin-card);
    }

    .profile-action-buttons {
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .btn-linkedin {
        background-color: var(--linkedin-blue);
        color: white;
        border: none;
        border-radius: 16px;
        padding: 8px 16px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: background-color 0.2s;
        font-size: 14px;
        height: 36px;
    }

    .btn-linkedin-outline {
        background-color: transparent;
        color: var(--linkedin-blue);
        border: 1px solid var(--linkedin-blue);
        border-radius: 16px;
        padding: 8px 16px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s;
        font-size: 14px;
        height: 36px;
        text-decoration: none;
    }

    .btn-logout {
        background-color: transparent;
        color: #666666;
        border: 1px solid #cccccc;
        border-radius: 16px;
        padding: 8px 16px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s;
        font-size: 14px;
        height: 36px;
    }

    .btn-linkedin:hover {
        background-color: var(--linkedin-dark-blue);
    }

    .btn-linkedin-outline:hover {
        background-color: rgba(112, 181, 249, 0.2);
        border-color: var(--linkedin-dark-blue);
        color: var(--linkedin-dark-blue);
        text-decoration: none;
    }

    .btn-logout:hover {
        background-color: rgba(0, 0, 0, 0.05);
        border-color: #999999;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.1);
    }

    .profile-details {
        margin-bottom: 8px;
    }

    .profile-name {
        font-size: 28px;
        font-weight: 600;
        margin: 0 0 4px;
        color: var(--linkedin-text);
    }

    .profile-title {
        font-size: 18px;
        font-weight: 400;
        margin: 0 0 12px;
        color: var(--linkedin-text-light);
    }

    .profile-contact {
        margin-top: 16px;
    }

    .profile-contact-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        color: var(--linkedin-text-light);
        margin-bottom: 8px;
    }

    /* About Section */
    .profile-about {
        background-color: var(--linkedin-card);
        border-radius: 10px;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.08), 0 2px 4px rgba(0,0,0,0.13);
        padding: 24px;
        margin-bottom: 16px;
    }

    .section-title {
        font-size: 20px;
        font-weight: 600;
        margin: 0 0 16px;
        color: var(--linkedin-text);
        padding-bottom: 8px;
        border-bottom: 1px solid var(--linkedin-border);
    }

    .about-content {
        font-size: 16px;
        line-height: 1.6;
        color: var(--linkedin-text);
        margin: 0;
    }

    /* Details Section */
    .profile-details-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        padding: 16px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

    .detail-label {
        font-size: 14px;
        color: var(--linkedin-text-light);
        margin-bottom: 8px;
        font-weight: 500;
    }

    .detail-value {
        font-size: 16px;
        font-weight: 500;
        color: var(--linkedin-text);
    }

    .badge-role {
        background-color: #e6f7ff;
        color: var(--linkedin-blue);
        padding: 6px 12px;
        border-radius: 16px;
        font-size: 14px;
        font-weight: 600;
        display: inline-block;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .profile-avatar-container {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
        }

        .profile-action-buttons {
            width: 100%;
            justify-content: space-between;
        }

        .profile-details-grid {
            grid-template-columns: 1fr;
        }

        .profile-name {
            font-size: 24px;
        }

        .profile-title {
            font-size: 16px;
        }
    }

    @@media (max-width: 576px) {
        .profile-container {
            padding: 0 12px;
        }

        .profile-info-section {
            padding: 0 16px 16px;
        }

        .profile-action-buttons {
            flex-direction: column;
            gap: 8px;
            width: 100%;
        }

        .btn-linkedin, .btn-linkedin-outline, .btn-logout {
            width: 100%;
            justify-content: center;
        }

        .profile-about {
            padding: 16px;
        }
    }
</style>

<div class="profile-container">
    <!-- Profile Card -->
    <div class="profile-card">
        <div class="profile-cover" style="background-image: url('@Model.CoverImage')"></div>

        <div class="profile-info-section">
            <div class="profile-avatar-container">
                <img src="@Model.ProfileImage" alt="Profile" class="profile-avatar">

                <div class="profile-action-buttons">
                    <a href="/DashboardUser/UserProfileSetting" class="btn-linkedin-outline">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>

                    <form id="logoutForm" asp-controller="LoginPage" asp-action="Logout" method="post">
                        <button type="submit" class="btn-logout">
                            <i class="fas fa-sign-out-alt"></i> Keluar
                        </button>
                    </form>
                </div>
            </div>

            <div class="profile-details">
                <h1 class="profile-name">@Model.Username</h1>
                <p class="profile-title">@Model.Posisi</p>

                <div class="profile-contact">
                    <div class="profile-contact-item">
                        <i class="fas fa-envelope"></i>
                        <span>@Model.Email</span>
                    </div>
                    <div class="profile-contact-item">
                        <i class="fas fa-user-tag"></i>
                        <span>@Model.Role</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div class="profile-about">
        <h2 class="section-title">Tentang</h2>
        <p class="about-content">
            @Model.Posisi dengan pengalaman dalam bidangnya. Tertarik pada pengembangan karir dan selalu mencari peluang baru.
        </p>
    </div>

    <!-- Details Section -->
    <div class="profile-about">
        <h2 class="section-title">Detail</h2>
        <div class="profile-details-grid">
            <div class="detail-item">
                <span class="detail-label">Username</span>
                <span class="detail-value">@Model.Username</span>
            </div>
            <div class="detail-item">
                <span class="detail-label">Email</span>
                <span class="detail-value">@Model.Email</span>
            </div>
            <div class="detail-item">
                <span class="detail-label">Role</span>
                <span class="detail-value">
                    <span class="badge-role">@Model.Role</span>
                </span>
            </div>
            <div class="detail-item">
                <span class="detail-label">Position</span>
                <span class="detail-value">@Model.Posisi</span>
            </div>
        </div>
    </div>
</div>





<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById('logoutForm');

        form.addEventListener('submit', function (e) {
            e.preventDefault();

            // Tampilkan konfirmasi
            Swal.fire({
                title: 'Logout?',
                text: "Apakah Anda yakin ingin logout?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#0a66c2',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Ya, Logout',
                cancelButtonText: 'Batal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit form
                    form.submit();
                }
            });
        });

        // Tampilkan popup success jika ada pesan dari controller
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                            Swal.fire({
                                title: 'Berhasil!',
                                text: '@TempData["SuccessMessage"]',
                                icon: 'success',
                                confirmButtonColor: '#0a66c2'
                            });
        </text>
    }

        // Tampilkan popup error jika ada pesan dari controller
    @if (TempData["ErrorMessage"] != null)
    {
        <text>
                            Swal.fire({
                                title: 'Gagal!',
                                text: '@TempData["ErrorMessage"]',
                                icon: 'error',
                                confirmButtonColor: '#d33'
                            });
        </text>
    }
    });
</script>