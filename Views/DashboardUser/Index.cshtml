<script>
    // Function to toggle save button with better visual feedback
    function toggleSave(button, event) {
        event.preventDefault();

        const form = button.closest('form');
        const icon = button.querySelector('i');

        // Toggle visual state immediately for better UX
        if (icon.classList.contains('far')) {
            icon.classList.replace('far', 'fas');
            button.classList.add('saved');
        } else {
            icon.classList.replace('fas', 'far');
            button.classList.remove('saved');
        }

        // Show confirmation dialog
        Swal.fire({
            title: 'Save Job?',
            text: "Apakah Anda yakin ingin Menyimpan Lowongan ini?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#0a66c2',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Ya, Save',
            cancelButtonText: 'Batal'
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit form
                form.submit();
            } else {
                // Revert visual state if cancelled
                if (icon.classList.contains('fas')) {
                    icon.classList.replace('fas', 'far');
                    button.classList.remove('saved');
                } else {
                    icon.classList.replace('far', 'fas');
                    button.classList.add('saved');
                }
            }
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        // Add event listeners to all save forms
        const saveForms = document.querySelectorAll('.savejob-form');
        saveForms.forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                // Handled by toggleSave function
            });
        });

        // Show success/error messages from server
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                Swal.fire({
                    title: 'Berhasil!',
                text: '@TempData["SuccessMessage"]',
                icon: 'success',
                confirmButtonColor: '#0a66c2',
                timer: 3000
                });
        </text>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <text>
                Swal.fire({
                    title: 'Gagal!',
                text: '@TempData["ErrorMessage"]',
                icon: 'error',
                confirmButtonColor: '#d33'
                });
        </text>
    }
    });
</script>