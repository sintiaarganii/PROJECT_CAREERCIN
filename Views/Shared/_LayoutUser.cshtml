            margin-left: 20px;
            position: relative;
        }

        .language-btn {
            background: none;
            border: none;
            color: var(--gray);
            cursor: pointer;
            display: flex;
            align-items: center;
            font-size: 14px;
            transition: var(--transition);
        }

            .language-btn:hover {
                color: var(--primary);
            }

            .language-btn i {
                margin-left: 5px;
            }

