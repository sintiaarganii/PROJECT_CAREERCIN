@using PROJECT_CAREERCIN.Interfaces
@inject IUser UserService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CareerCin - Job Portal</title>
    <style>
        /* Global Styles */
        :root {
            --primary: #0a66c2;
            --primary-light: #e2f0fe;
            --secondary: #ffffff;
            --dark: #000000;
            --light-gray: #eef3f8;
            --gray: #666666;
            --dark-gray: #333333;
            --transition: all 0.3s ease;
            --border-radius: 8px;
            --box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        *::-webkit-scrollbar {
            display: none;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--light-gray);
            color: var(--dark-gray);
            transition: var(--transition);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header Styles */
        header {
            background-color: var(--secondary);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 100;
            animation: slideDown 0.5s ease;
        }

        @@keyframes slideDown {
            from {
                transform: translateY(-100%);
            }

            to {
                transform: translateY(0);
            }
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: var(--primary);
            text-decoration: none;
            display: flex;
            align-items: center;
        }

            .logo i {
                margin-right: 10px;
                font-size: 28px;
            }

        .search-bar {
            flex-grow: 1;
            margin: 0 20px;
            position: relative;
        }

            .search-bar input {
                width: 100%;
                padding: 12px 15px 12px 40px;
                border-radius: var(--border-radius);
                border: 1px solid #ccc;
                font-size: 14px;
                transition: var(--transition);
            }

                .search-bar input:focus {
                    outline: none;
                    border-color: var(--primary);
                    box-shadow: 0 0 0 2px rgba(10, 102, 194, 0.2);
                }

            .search-bar i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--gray);
            }

        .nav-links {
            display: flex;
            list-style: none;
        }

            .nav-links li {
                margin-left: 20px;
            }

            .nav-links a {
                text-decoration: none;
                color: var(--gray);
                font-size: 14px;
                display: flex;
                flex-direction: column;
                align-items: center;
                transition: var(--transition);
                padding: 5px;
            }

                .nav-links a:hover {
                    color: var(--primary);
                }

            .nav-links i {
                font-size: 20px;
                margin-bottom: 5px;
            }

            .nav-links .active {
                color: var(--primary);
                position: relative;
            }

                .nav-links .active::after {
                    content: '';
                    position: absolute;
                    bottom: -10px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 5px;
                    height: 5px;
                    background-color: var(--primary);
                    border-radius: 50%;
                }

        .language-switcher {
            margin-left: 20px;
            position: relative;
        }

        .language-btn {
            background: none;
            border: none;
            color: var(--gray);
            cursor: pointer;
            display: flex;
            align-items: center;
            font-size: 14px;
            transition: var(--transition);
        }

            .language-btn:hover {
                color: var(--primary);
            }

            .language-btn i {
                margin-left: 5px;
            }

        .profile-dropdown {
            position: relative;
        }

        .profile-btn {
            background: none;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .profile-img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid #ddd;
            transition: var(--transition);
        }

        .profile-btn:hover .profile-img {
            box-shadow: 0 0 0 2px var(--primary);
        }

        /* Main Content */
        main {
            margin-top: 70px;
            padding: 20px 0;
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .content-wrapper {
            display: flex;
            gap: 20px;
        }

        /* Sidebar */
        .sidebar {
            width: 25%;
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            position: sticky;
            top: 90px;
            height: fit-content;
            animation: slideInLeft 0.5s ease;
        }

        @@keyframes slideInLeft {
            from {
                transform: translateX(-20px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .sidebar-section {
            margin-bottom: 25px;
        }

            .sidebar-section:last-child {
                margin-bottom: 0;
            }

        .sidebar-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--dark-gray);
            padding-bottom: 8px;
            border-bottom: 1px solid var(--light-gray);
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 10px 0;
            color: var(--gray);
            text-decoration: none;
            font-size: 14px;
            transition: var(--transition);
            border-radius: 4px;
        }

            .sidebar-link:hover {
                color: var(--primary);
                background-color: var(--primary-light);
                padding-left: 10px;
            }

            .sidebar-link i {
                margin-right: 10px;
                font-size: 18px;
                width: 24px;
                text-align: center;
            }

            .sidebar-link.active {
                color: var(--primary);
                font-weight: 500;
                background-color: var(--primary-light);
                padding-left: 10px;
            }

        .sidebar-divider {
            height: 1px;
            background-color: #eee;
            margin: 15px 0;
        }

        /* Main Content Area */
        .main-content {
            flex-grow: 1;
            animation: slideInRight 0.5s ease;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(20px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .section-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--dark-gray);
            position: relative;
            padding-bottom: 10px;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 50px;
                height: 3px;
                background-color: var(--primary);
                border-radius: 2px;
            }

        .job-cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .job-card {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            transition: var(--transition);
            animation: fadeInUp 0.5s ease;
            position: relative;
            border: 1px solid transparent;
        }

        @@keyframes fadeInUp {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
            border-color: var(--primary-light);
        }

        .job-card-header {
            display: flex;
            align-items: flex-start;
            margin-bottom: 15px;
        }

        .company-logo {
            width: 50px;
            height: 50px;
            border-radius: 5px;
            object-fit: cover;
            margin-right: 15px;
            border: 1px solid #eee;
        }

        .job-info {
            flex-grow: 1;
        }

        .job-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 5px;
            color: var(--dark);
        }

        .company-name {
            font-size: 14px;
            color: var(--gray);
            margin-bottom: 5px;
        }

        .job-location {
            font-size: 13px;
            color: var(--gray);
            display: flex;
            align-items: center;
        }

            .job-location i {
                margin-right: 5px;
            }

        .job-save-btn {
            background: none;
            border: none;
            color: var(--gray);
            font-size: 20px;
            cursor: pointer;
            transition: var(--transition);
            padding: 5px;
        }

            .job-save-btn:hover {
                color: var(--primary);
            }

            .job-save-btn.saved {
                color: var(--primary);
            }

        .job-card-body {
            margin-bottom: 15px;
        }

        .job-description {
            font-size: 14px;
            line-height: 1.5;
            color: var(--dark-gray);
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .job-posted {
            font-size: 12px;
            color: var(--gray);
            margin-bottom: 15px;
        }

        .job-card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .job-type {
            font-size: 12px;
            padding: 5px 10px;
            background-color: var(--light-gray);
            border-radius: 20px;
            color: var(--dark-gray);
        }

        .quick-apply-btn {
            background-color: var(--primary);
            color: var(--secondary);
            border: none;
            border-radius: var(--border-radius);
            padding: 8px 15px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
        }

            .quick-apply-btn:hover {
                background-color: #004182;
                transform: translateY(-2px);
            }

        /* Hidden Sections */
        .hidden-section {
            display: none;
            animation: fadeIn 0.5s ease;
        }

        /* Notifications Section */
        .notification-card {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            align-items: flex-start;
            transition: var(--transition);
            border-left: 3px solid transparent;
        }

            .notification-card:hover {
                transform: translateX(5px);
                border-left-color: var(--primary);
            }

        .notification-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--light-gray);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: var(--primary);
            font-size: 18px;
        }

        .notification-content {
            flex-grow: 1;
        }

        .notification-title {
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 5px;
        }

        .notification-time {
            font-size: 12px;
            color: var(--gray);
        }

        .notification-actions {
            display: flex;
            gap: 10px;
        }

        .notification-action-btn {
            background: none;
            border: none;
            color: var(--gray);
            cursor: pointer;
            font-size: 16px;
            transition: var(--transition);
        }

            .notification-action-btn:hover {
                color: var(--primary);
            }

        /* Saved Jobs Section */
        .saved-jobs-list {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
        }

        .saved-job-item {
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            transition: var(--transition);
        }

            .saved-job-item:last-child {
                border-bottom: none;
            }

            .saved-job-item:hover {
                background-color: var(--light-gray);
            }

        .saved-job-info {
            flex-grow: 1;
        }

        .saved-job-title {
            font-size: 15px;
            font-weight: 500;
            margin-bottom: 5px;
        }

        .saved-job-company {
            font-size: 13px;
            color: var(--gray);
        }

        .saved-job-actions {
            display: flex;
            gap: 10px;
        }

        .saved-job-action-btn {
            background: none;
            border: none;
            cursor: pointer;
            color: var(--gray);
            font-size: 16px;
            transition: var(--transition);
        }

            .saved-job-action-btn:hover {
                color: var(--primary);
            }

        /* Application History Section */
        .application-history {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
        }

        .application-item {
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            transition: var(--transition);
        }

            .application-item:last-child {
                border-bottom: none;
            }

            .application-item:hover {
                background-color: var(--light-gray);
            }

        .application-header {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .application-company-logo {
            width: 40px;
            height: 40px;
            border-radius: 5px;
            object-fit: cover;
            margin-right: 15px;
            border: 1px solid #eee;
        }

        .application-info {
            flex-grow: 1;
        }

        .application-job-title {
            font-size: 15px;
            font-weight: 500;
            margin-bottom: 3px;
        }

        .application-company-name {
            font-size: 13px;
            color: var(--gray);
        }

        .application-date {
            font-size: 12px;
            color: var(--gray);
        }

        .application-status {
            font-size: 12px;
            padding: 3px 8px;
            border-radius: 20px;
            margin-left: 10px;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-reviewed {
            background-color: #cce5ff;
            color: #004085;
        }

        .status-rejected {
            background-color: #f8d7da;
            color: #721c24;
        }

        .status-accepted {
            background-color: #d4edda;
            color: #155724;
        }

        /* Profile Section */
        .profile-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
            animation: fadeIn 0.5s ease;
        }

        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--primary);
            margin-right: 30px;
        }

        .profile-info {
            flex-grow: 1;
        }

        .profile-name {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 5px;
            color: var(--dark);
        }

        .profile-title {
            font-size: 16px;
            color: var(--gray);
            margin-bottom: 10px;
        }

        .profile-location {
            font-size: 14px;
            color: var(--gray);
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .profile-location i {
                margin-right: 5px;
            }

        .profile-edit-btn {
            background-color: var(--secondary);
            color: var(--primary);
            border: 1px solid var(--primary);
            border-radius: var(--border-radius);
            padding: 8px 15px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
        }

            .profile-edit-btn:hover {
                background-color: rgba(10, 102, 194, 0.1);
            }

        .profile-details {
            margin-bottom: 30px;
        }

        .profile-details-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--dark-gray);
            position: relative;
            padding-bottom: 8px;
        }

            .profile-details-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 40px;
                height: 2px;
                background-color: var(--primary);
            }

        .profile-details-content {
            font-size: 14px;
            line-height: 1.6;
            color: var(--dark-gray);
        }

        .profile-skills {
            margin-bottom: 30px;
        }

        .skills-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .skill-tag {
            background-color: var(--light-gray);
            color: var(--dark-gray);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 13px;
            transition: var(--transition);
        }

            .skill-tag:hover {
                background-color: var(--primary-light);
                color: var(--primary);
            }

        /* Footer */
        footer {
            background-color: var(--secondary);
            padding: 30px 0;
            margin-top: 50px;
            border-top: 1px solid #eee;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .footer-links {
            display: flex;
            list-style: none;
            gap: 20px;
        }

            .footer-links a {
                text-decoration: none;
                color: var(--gray);
                font-size: 14px;
                transition: var(--transition);
                padding: 5px 0;
                position: relative;
            }

                .footer-links a:hover {
                    color: var(--primary);
                }

                .footer-links a::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 0;
                    height: 1px;
                    background-color: var(--primary);
                    transition: var(--transition);
                }

                .footer-links a:hover::after {
                    width: 100%;
                }

        .copyright {
            font-size: 14px;
            color: var(--gray);
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .content-wrapper {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                position: static;
                margin-bottom: 20px;
            }

            .job-cards {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
        }

        @@media (max-width: 768px) {
            .header-container {
                flex-direction: column;
                align-items: stretch;
            }

            .logo {
                margin-bottom: 10px;
                justify-content: center;
            }

            .search-bar {
                margin: 10px 0;
            }

            .nav-links {
                justify-content: space-around;
                margin-top: 10px;
            }

                .nav-links li {
                    margin-left: 0;
                }

            .profile-header {
                flex-direction: column;
                text-align: center;
            }

            .profile-avatar {
                margin-right: 0;
                margin-bottom: 20px;
            }

            .footer-container {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .footer-links {
                flex-direction: column;
                gap: 10px;
            }
        }

        @@media (max-width: 576px) {
            .job-cards {
                grid-template-columns: 1fr;
            }

            .job-card-header {
                flex-direction: column;
            }

            .company-logo {
                margin-bottom: 10px;
            }

            .job-card-footer {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }

            .quick-apply-btn {
                width: 100%;
            }

            .notification-card {
                flex-direction: column;
            }

            .notification-icon {
                margin-bottom: 10px;
            }

            .notification-actions {
                margin-top: 10px;
                justify-content: center;
            }
        }

        /* Additional styles for specific sections */
        .filter-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 20px;
        }

        .filter-group {
            margin-bottom: 15px;
        }

        .filter-title {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
            color: var(--dark-gray);
        }

        .filter-options {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .filter-option {
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .filter-option input[type="checkbox"] {
                width: 16px;
                height: 16px;
            }

        .filter-label {
            font-size: 13px;
            color: var(--dark-gray);
        }

        .help-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 20px;
        }

        .help-item {
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--light-gray);
        }

            .help-item:last-child {
                margin-bottom: 0;
                padding-bottom: 0;
                border-bottom: none;
            }

        .help-question {
            font-size: 15px;
            font-weight: 600;
            margin-bottom: 5px;
            color: var(--dark-gray);
        }

        .help-answer {
            font-size: 14px;
            color: var(--gray);
            line-height: 1.5;
        }

        .about-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
            margin-bottom: 20px;
        }

        .about-title {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--dark-gray);
        }

        .about-content {
            font-size: 15px;
            line-height: 1.6;
            color: var(--dark-gray);
        }

        .policy-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
            margin-bottom: 20px;
        }

        .policy-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--dark-gray);
        }

        .policy-content {
            font-size: 14px;
            line-height: 1.6;
            color: var(--dark-gray);
        }

            .policy-content h3 {
                font-size: 16px;
                margin: 15px 0 8px 0;
                color: var(--dark-gray);
            }

            .policy-content p {
                margin-bottom: 10px;
            }

            .policy-content ul {
                margin-left: 20px;
                margin-bottom: 15px;
            }

        .help-center-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
            margin-bottom: 20px;
        }

        .help-search {
