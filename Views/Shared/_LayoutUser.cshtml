    <script>
        // Function to toggle between sections
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.hidden-section').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById('home-section').style.display = 'none';

            // Show the selected section
            if (sectionId === 'home') {
                document.getElementById('home-section').style.display = 'block';
            } else {
                document.getElementById(sectionId + '-section').style.display = 'block';
            }

            // Update active nav link
            document.querySelectorAll('.nav-links a').forEach(link => {
                link.classList.remove('active');
            });
            document.querySelectorAll('.sidebar-link').forEach(link => {
                link.classList.remove('active');
            });

            if (sectionId === 'home') {
                document.querySelector('.nav-links li:first-child a').classList.add('active');
                document.querySelector('.sidebar-link:first-child').classList.add('active');
            } else {
                document.querySelector(`.nav-links a[onclick="showSection('${sectionId}')"]`).classList.add('active');
                document.querySelector(`.sidebar-link[onclick="showSection('${sectionId}')"]`).classList.add('active');
            }
        }

        // Function to toggle job save
        function toggleSave(button) {
            button.classList.toggle('saved');
            if (button.classList.contains('saved')) {
                button.innerHTML = '<i class="fas fa-bookmark"></i>';
                // In a real app, you would save this to the user's saved jobs
            } else {
                button.innerHTML = '<i class="far fa-bookmark"></i>';
                // In a real app, you would remove this from the user's saved jobs
            }
        }

        // Function to apply for a job
        function applyForJob(button) {
            button.textContent = 'Applied';
            button.style.backgroundColor = '#28a745';
            button.disabled = true;

            // In a real app, you would submit an application to the server
            setTimeout(() => {
                button.textContent = 'Quick Apply';
                button.style.backgroundColor = '';
                button.disabled = false;
            }, 2000);
        }

        // Function to toggle language
        function toggleLanguage() {
            const languageText = document.getElementById('language-text');
            if (languageText.textContent === 'English') {
                languageText.textContent = 'Indonesia';
                // In a real app, you would change all text to Indonesian
            } else {
                languageText.textContent = 'English';
                // In a real app, you would change all text to English
            }
        }
