                </aside>

                <!-- Main Content Area -->
                <div class="main-content">
                    <!-- Home Section (Default) -->
                    @RenderBody()

                    <!-- Search Filters Section (Hidden by default) -->
                    <section id="search-filters-section" class="hidden-section">
                        <h2 class="section-title">Search Filters</h2>
                        <div class="filter-section">
                            <div class="filter-group">
                                <h3 class="filter-title">Job Type</h3>
                                <div class="filter-options">
