<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BbibbJobStreet - Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f5f7fa;
            color: #333;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 270px;
            background-color: #2c3e50;
            color: #fff;
            padding: 20px;
            position: fixed;
            height: 100%;
            transition: transform 0.3s ease;
        }

            .sidebar h2 {
                color: #3498db;
                margin-bottom: 30px;
                font-size: 26px;
                text-align: center;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .sidebar h2 i {
                    margin-right: 10px;
                }

            .sidebar ul {
                list-style: none;
            }

                .sidebar ul li {
                    margin: 15px 0;
                }

                    .sidebar ul li a {
                        color: #ecf0f1;
                        text-decoration: none;
                        font-size: 18px;
                        display: flex;
                        align-items: center;
                        padding: 12px;
                        border-radius: 5px;
                        transition: background 0.3s ease, transform 0.3s ease;
                    }

                        .sidebar ul li a i {
                            margin-right: 10px;
                        }

                        .sidebar ul li a:hover {
                            background-color: #3498db;
                            transform: translateX(10px);
                        }

        /* Header Styles */
        .header {
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-left: 270px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header h1 {
                color: #2c3e50;
                font-size: 24px;
                display: flex;
                align-items: center;
            }

                .header h1 i {
                    margin-right: 10px;
                    color: #3498db;
                }

            .header .user-profile {
                display: flex;
                align-items: center;
            }

                .header .user-profile img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    margin-right: 10px;
                }

                .header .user-profile span {
                    font-size: 16px;
                    color: #2c3e50;
                }

        /* Main Content Styles */
        .main-content {
            margin-left: 270px;
            padding: 20px;
            flex-grow: 1;
        }

        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            }

            .card i {
                font-size: 30px;
                color: #3498db;
                margin-bottom: 10px;
            }

            .card h3 {
                color: #3498db;
                margin-bottom: 10px;
            }

            .card p {
                font-size: 24px;
                color: #2c3e50;
            }

        /* Action Button */
        .action-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #3498db;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin: 20px 0;
            transition: background 0.3s ease;
        }

            .action-btn:hover {
                background-color: #2980b9;
            }

        /* Table Styles */
        .table-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        th {
            background-color: #3498db;
            color: #fff;
        }

        tr:hover {
            background-color: #f1f5f9;
        }

        /* Chart Placeholder */
        .chart-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .chart-placeholder {
            font-size: 18px;
            color: #2c3e50;
            text-align: center;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-270px);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .header, .main-content {
                margin-left: 0;
            }

            .toggle-btn {
                display: block;
                font-size: 24px;
                cursor: pointer;
                color: #2c3e50;
            }
        }

        /* Animasi Fade In */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .main-content, .card, .table-container, .chart-container {
            animation: fadeIn 0.5s ease-in;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2><i class="fas fa-briefcase"></i> BbibbJobStreet</h2>
            <ul>
                <li><a href="#"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="#"><i class="fas fa-suitcase"></i> Lowongan</a></li>
                <li><a href="/DashboardAdmin/KategoriPekerjaan" class="nav-link" data-page="kategori"><i class="fas fa-file-alt"></i> Kategori</a></li>
                <li><a href="#"><i class="fas fa-users"></i> Pelamar</a></li>
                <li><a href="#"><i class="fas fa-file-alt"></i> Laporan</a></li>
                <li><a href="#"><i class="fas fa-cog"></i> Pengaturan</a></li>
                <li><a href="#"><i class="fas fa-building"></i> Perusahaan</a></li>
                <li><a href="#"><i class="fas fa-bell"></i> Notifikasi</a></li>
                @* <li><a href="#"><i class="fas fa-sign-out-alt"></i> Keluar</a></li> *@
                <form asp-controller="LoginPage" asp-action="Logout" method="post" style="display: inline;">
                    <button type="submit" style="background: none; border: none; color: inherit; cursor: pointer;">
                        <i class="fas fa-sign-out-alt"></i> Keluar
                    </button>
                </form>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <div class="toggle-btn"><i class="fas fa-bars"></i></div>
                <h1><i class="fas fa-tachometer-alt"></i> Super Admin Dashboard</h1>
                <div class="user-profile">
                    <img src="https://via.placeholder.com/40" alt="User Profile">
                    <span>Admin</span>
                </div>
            </div>

            <a href="#" class="action-btn"><i class="fas fa-plus"></i> Tambah Lowongan</a>
            @RenderBody()

        </div>

    </div>

    <script>
        // Toggle sidebar for mobile
        document.querySelector('.toggle-btn').addEventListener('click', () => {
            document.querySelector('.sidebar').classList.toggle('active');
        });
    </script>
</body>
</html> 