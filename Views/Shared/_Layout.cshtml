<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CareerCinJwtToken</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CareerCinJwtToken.styles.css" asp-append-version="true" />
    <!-- Font Awesome untuk ikon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Header Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <!-- Menu Toggle -->
                <button class="btn btn-outline-secondary me-3">
                    <i class="fa fa-bars"></i>
                </button>

                <!-- Judul Dashboard -->
                <div class="text-center flex-grow-1 fw-bold fs-5">
                    <i class="fa fa-tachometer-alt me-2"></i> Dashboard
                </div>

                <!-- User Info -->
                <div class="d-flex align-items-center">
                    <img src="~/images/user.png" alt="User" class="rounded-circle me-2" width="32" height="32">
                    <span class="fw-semibold">Admin Perusahaan</span>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center py-3">
            &copy; 2025 - CareerCinJwtToken
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
